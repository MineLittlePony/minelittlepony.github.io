---
import { Image } from 'astro:assets'
import { int2hex } from '~/utils/color'

export { type Feature as Props } from '~/data/features/features'

const { image, icon, color, title, content } = Astro.props
---

<div class="bg-white shadow-lg">
  <!-- Image -->
  <Image class="h-auto w-full" src={image} alt={title} />

  <!-- Icon -->
  <div
    class="relative mx-auto -mt-12 flex size-24 items-center justify-center rounded-full border-8 border-white text-white"
    style={{ backgroundColor: int2hex(color) }}
  >
    <i class:list={[icon, 'fa-2xl']}></i>
  </div>

  <!-- Body -->
  <div class="px-4 pt-2 pb-6 text-center">
    <!-- Title -->
    <h3 class="mb-2">{title}</h3>

    <!-- Content -->
    <p>{content}</p>
  </div>
</div>
